<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
             ui:generateLocales='default'>

    <g:HTMLPanel>
        <g:HorizontalPanel>
            <g:HorizontalPanel ui:field="viewCommentPanel">
                <g:HTML ui:field="commentContainer"></g:HTML>
            </g:HorizontalPanel>
            <g:VerticalPanel ui:field="newCommentPanel">
                <g:RichTextArea ui:field="commentRichTextArea">
                    Write something...
                </g:RichTextArea>
                <g:Button ui:field="submitButton">Submit</g:Button>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>
