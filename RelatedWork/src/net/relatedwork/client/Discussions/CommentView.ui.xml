<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:VerticalPanel>
			<g:RichTextArea ui:field="commentRichTextArea">
			Leave a comment!
			</g:RichTextArea>
			<g:Button ui:field="sendButton">Send Comment</g:Button>
			<g:DecoratedTabPanel ui:field="discussionsTabPanel"></g:DecoratedTabPanel>
			<g:HTMLPanel ui:field="commentContainer"></g:HTMLPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
