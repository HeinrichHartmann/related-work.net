<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel ui:field="rwMain">
	    <g:HTMLPanel ui:field="rwHeader" styleName="rwHeader">
	    	<g:VerticalPanel>
				<g:HorizontalPanel>
		    		<g:HTMLPanel ui:field="rwLogo">LOGO</g:HTMLPanel>
	    			<g:HTMLPanel ui:field="rwHeaderSearch">
						<g:SuggestBox text="search me"></g:SuggestBox>
						<g:Button>(re)search</g:Button>
					</g:HTMLPanel>
	    			<g:HTMLPanel ui:field="rwHeaderLogin"></g:HTMLPanel>	    
				</g:HorizontalPanel>
		    	<g:HTMLPanel ui:field="rwBreadcrumbs"></g:HTMLPanel>
	    	</g:VerticalPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="rwBody" styleName="rwBody">
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:HTMLPanel ui:field="rwContent" styleName="rwContent">
						<h1>Content  Title to put here</h1>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="rwSidebar" styleName="rwSidebar">
					Side bar needs more HTML Fields for the elements. e.g. Search Box, Tags, Login, History, Recommendations,...
					</g:HTMLPanel>
				</g:HorizontalPanel>
				<g:HTMLPanel ui:field="rwDiscussions" styleName="rwDiscussions"></g:HTMLPanel>
			</g:VerticalPanel>
			
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="rwFooter" styleName="rwFooter">
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
